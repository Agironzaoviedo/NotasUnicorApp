<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".FragmentVistaGeneral"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        app:cardElevation="3dp"
        app:cardCornerRadius="8dp"
        android:focusable="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:background="?attr/selectableItemBackground"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:gravity="left"
                android:layout_gravity="left"
                >
                <TextView
                    android:id="@+id/Ginicial"
                    android:layout_width="55dp"
                    android:layout_height="50dp"
                    android:text="Lunes"
                    android:maxLength="3"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@android:color/holo_purple"
                    />
            </LinearLayout>

            <View
                android:layout_width="2dp"
                android:layout_height="50dp"
                android:background="@color/colorAccent" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="8.2"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:weightSum="10"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_weight="6"
                        android:id="@+id/Gnom"
                        android:layout_width="0dp"
                        android:text="Nombre materia"
                        android:textColor="@color/colorPrimaryDark"
                        android:singleLine="true"
                        android:ellipsize="marquee"
                        android:focusable="false"
                        android:scrollHorizontally="true"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        />

                    <LinearLayout
                        android:layout_weight="3.8"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:weightSum="20">
                        <View

                            android:layout_width="1dp"
                            android:background="@android:color/holo_red_light"
                            android:layout_height="match_parent">

                        </View>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="13"
                            android:textColor="@android:color/holo_purple"
                            android:layout_height="wrap_content"
                            android:text="@string/definitiva"
                            android:textSize="14sp"
                            android:gravity="center"
                            />
                        <TextView
                            android:id="@+id/Gdefi"
                            android:layout_width="0dp"
                            android:layout_weight="6"
                            android:layout_height="wrap_content"
                            android:maxLength="3"
                            android:text="201"
                            android:lines="1"
                            android:textColor="@color/colorPrimary"
                            android:textSize="14.5sp"
                            android:gravity="center"
                            />
                    </LinearLayout>
                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="bottom"
                    android:background="@color/grisfondo"
                    android:weightSum="14.9">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="3.2"
                        android:layout_height="wrap_content"
                        android:text="@string/corte1"
                        android:textSize="14sp"
                        android:gravity="center"
                        />

                    <TextView
                        android:id="@+id/Gcorte1"
                        android:layout_width="0dp"
                        android:layout_weight="1.4"
                        android:layout_height="wrap_content"
                        android:text="5.0"
                        android:lines="1"
                        android:maxLength="3"
                        android:textColor="@color/colorPrimary"
                        android:textSize="14.5sp"
                        android:gravity="center"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.4"
                        android:layout_height="wrap_content"
                        android:text="/"
                        android:textSize="15sp"
                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="3.4"
                        android:layout_height="wrap_content"
                        android:text="@string/corte2"
                        android:textSize="14sp"
                        android:gravity="start"
                        />

                    <TextView
                        android:id="@+id/Gcorte2"
                        android:layout_width="0dp"
                        android:layout_weight="1.4"
                        android:layout_height="wrap_content"
                        android:text="5.0"
                        android:maxLength="3"
                        android:textColor="@color/colorPrimary"
                        android:textSize="15sp"
                        android:gravity="start"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.4"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:text="/"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="3.5"
                        android:layout_height="wrap_content"
                        android:text="@string/corte3"
                        android:textSize="14sp"
                        android:gravity="start"
                        />
                    <TextView
                        android:id="@+id/Gcorte3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.4"
                        android:textColor="@color/colorPrimary"
                        android:maxLength="3"
                        android:textSize="14.5sp"
                        android:gravity="start"
                        android:text="5.0"
                        />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
