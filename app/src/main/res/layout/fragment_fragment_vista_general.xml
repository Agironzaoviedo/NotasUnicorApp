<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FragmentVistaGeneral">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        tools:context=".MainActivityNav"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            app:cardElevation="3dp"
            app:cardCornerRadius="8dp"
            android:layout_marginBottom="5dp"
            android:focusable="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="?attr/selectableItemBackground"
                android:focusable="false"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/GtPga"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:text="PGA:"

                    android:textColor="@android:color/holo_orange_light"
                    android:textSize="20sp"
                    android:textStyle="bold" />
                <!--Comments -->

                <EditText
                    android:id="@+id/Gpga"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.4"
                    android:gravity="center"
                    android:hint="@string/NotaMeta"
                    android:inputType="numberDecimal"
                    android:maxLength="4"
                    android:focusableInTouchMode="false"
                    android:selectAllOnFocus="true"
                    android:text="@string/NotaMeta"
                    android:textColor="@color/colorAccent"
                    android:textColorHint="@color/FondoPrincipal"
                    android:textSize="20sp" />

                <View
                    android:layout_gravity="center"
                    android:layout_width="2dp"
                    android:layout_height="35dp"
                    android:layout_margin="3dp"
                    android:background="@color/fondogray" />

                <TextView
                    android:id="@+id/GtPsem"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4.5"
                    android:gravity="center"
                    android:text="PSem:"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20sp"
                    android:textStyle="bold" />
                <!--Comments -->

                <EditText
                    android:id="@+id/GPsem"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.5"
                    android:gravity="center"
                    android:hint="@string/NotaMeta"
                    android:inputType="numberDecimal"
                    android:maxLength="4"
                    android:selectAllOnFocus="true"
                    android:text="@string/NotaMeta"
                    android:focusableInTouchMode="false"
                    android:textColor="@color/colorAccent"
                    android:textColorHint="@color/FondoPrincipal"
                    android:textSize="20sp" />

                <View
                    android:layout_gravity="center"
                    android:layout_width="2dp"
                    android:layout_height="35dp"
                    android:layout_margin="3dp"
                    android:background="@color/fondogray" />

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5.5"
                    android:width="30sp"
                    android:textColor="@color/colorPrimary"
                    android:gravity="center"
                    android:text="Creditos totales:"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/GtotalCre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.6"
                    android:gravity="center"
                    android:text="##"
                    android:textSize="18sp"
                    />
            </LinearLayout>
        </android.support.v7.widget.CardView>


        <ListView
            android:id="@+id/GLista"
            android:choiceMode="singleChoice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </ListView>


    </LinearLayout>


</FrameLayout>